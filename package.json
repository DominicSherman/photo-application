{
  "name": "photo-application",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .json --ext .js",
    "test": "yarn lint && yarn coverage",
    "unit": "jest"
  },
  "jest": {
    "coverageDirectory": ".coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/*/*.js",
      "<rootDir>/src/*.js",
      "<rootDir>/index.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/constants"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router-native)/"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^react-redux": "<rootDir>/test/stubs/react-redux-stub.js",
      "react-native-fetch-blob": "<rootDir>/test/stubs/react-native-fetch-blob-stub.js",
      "^firebase": "<rootDir>/test/stubs/firebase-stub.js",
      ".+\\.(png)$": "jest-transform-stub"
    }
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/photo-application.app",
        "build": "xcodebuild -project ios/photo-application.xcodeproj -scheme photo-application -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    }
  },
  "dependencies": {
    "firebase": "4.6.2",
    "firebase-tools": "^4.2.1",
    "jest-transform-stub": "^1.0.0",
    "react": "16.3.1",
    "react-native": "~0.55.2",
    "react-native-fetch-blob": "^0.10.8",
    "react-native-heic-converter": "^1.1.1",
    "react-native-image-gallery": "^2.1.5",
    "react-native-image-picker": "^0.26.10",
    "react-native-interactive-image-gallery": "^0.1.2",
    "react-native-navigation": "2.0.2373",
    "react-native-platform-touchable": "^1.1.1",
    "react-native-progress": "^3.5.0",
    "react-native-share": "^1.1.1",
    "react-native-thumbnail-grid": "^0.3.0",
    "react-native-vector-icons": "^5.0.0",
    "react-navigation": "^2.12.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "detox": "^9.0.6",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "chance": "^1.0.16",
    "eslint": "4.19.1",
    "eslint-config-get-off-my-lawn": "^4.0.1",
    "jest": "^23.5.0",
    "jest-react-native": "^18.0.0",
    "react-test-renderer": "16.3.1"
  },
  "resolutions": {
    "grpc": "^1.12.0"
  }
}
